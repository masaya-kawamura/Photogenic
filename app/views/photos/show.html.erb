<div class="photos-show-container">
  <div class="photos-show-flex">
    <div class="photo-contents">
      <%= render 'photographers/top_profile', user: @user %>
      <div class="photo-flame">
        <div class="square">
          <%= image_tag @photo.photo_image.url %>
        </div>
        <div class="photo-edit-menu">
          <%= render 'photos/photo_edit_menu', photo: @photo %>
        </div>
      </div>
      <div id='social-menu'>
        <%= render 'photos/social_menu', photo: @photo %>
      </div>
      <% if @photo.caption.present? %>
        <div class="photo-caption">
          <p><%= @photo.caption %></p>
        </div>
      <% end %>
      <div class="mb-5">
        <%= render 'genres/tags', genres: @photo.genres %>
      </div>


      <div class="wrap">
        <ul id="tab-menu">
          <li><a href="#tab1" class="active">コメント</a></li>
          <li><a href="#tab2" class="">評価</a></li>
        </ul>

        <div id="tab-contents">

          <div id="tab1" class="tab">
            <!--------- ここからCommentの記述部分 ------------>
            <div id="photo-comments">
              <%= render 'comments/index', photo: @photo %>
            </div>
            <!------------- Comment入力フォーム -------------->
            <div id="comment-form">
              <%= render 'comments/form', photo: @photo, comment: @comment %>
            </div>
          </div>

          <div id="tab2" class="tab">
            <!---------------ここからRateの記述--------------->
            <div id="photo-rates">
              <%= render 'rates/index', photo: @photo %>
            </div>
            <!--------------- Rate入力フォーム --------------->
            <div id="rate-form">
              <%= render 'rates/form', photo: @photo, rate: @rate %>
            </div>
          </div>

        </div>
      </div>
    </div>

    <!--------------ここからrecomend---------------->
    <div class="recomend-wrapper">
      <h2 class="menu-title">おすすめの写真</h2>
      <div class="recomend-image-wrapper">
        <% @photos.first(14).each do |photo| %>
          <%= link_to photo_path(photo), class: 'recomend-image-flame' do %>
            <div class="square">
              <%= image_tag photo.photo_image.url %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

