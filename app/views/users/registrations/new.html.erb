<div class="users-container">
  <div class="users-wrapper">
    <h2 class="menu-title">新規登録</h2>

    <%= form_with model:@user, url: user_registration_path, local:true do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, 'ユーザーネーム' %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:'form-control' %>
      </div>

      <div class="field">
        <%= f.label :email, 'メールアドレス' %><br />
        <%= f.email_field :email, autocomplete: "email", class:'form-control' %>
      </div>

      <div class="field">
        <%= f.label :area, 'お住まいの地域｜活動地域' %><br />
        <%= f.text_field :area, autocomplete: "email", class:'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password, 'パスワード' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, 'パスワード（確認用）' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
      </div>

      <div class="actions field">
        <%= f.submit "新規登録", class:'form-control btn btn-info', data: { disable_with: '保存中...' } %>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>
