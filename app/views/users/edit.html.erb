<div class="users-container">
  <div class="users-wrapper">

    <%= form_with model:@user, local: true do |f| %>

    <div class="field">
      <%= f.label :name, 'ユーザーネーム' %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class:'form-control' %>
    </div>

    <div class="field">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.text_field :email, autocomplete: "email", class:'form-control' %>
    </div>

    <div class="field">
      <%= f.label :profile_image, 'プロフィール写真' %>
      <%= f.file_field :profile_image, class:'form-control' %>
    </div>

    <div class="field">
      <%= f.label :cover_image, 'カバー写真' %>
      <%= f.file_field :cover_image, class:'form-control' %>
    </div>

    <div class="field">
      <%= f.label :area, '活動地域｜お住まいの地域' %>
      <%= f.text_field :area, autocomplete: 'area', class:'form-control' %>
    </div>

    <div class="action field">
      <%= f.submit '変更を保存', class:'form-control btn btn-dark' %>
    </div>
    <% end %>

    <div class="form action">
      <%= link_to '退会する', '#', class:'form-control btn btn-dark' %>
    </div>

  </div>
</div>