<div class='users-container'>
  <h2 class='menu-title mb-4'>パスワードの再設定</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "新しいパスワード" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以内)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "もう一度入力してください" %><br />
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
    </div>

    <div class="actions field">
      <%= f.submit "パスワードを設定する", class: 'btn btn-info form-control', data: { disable_with: '保存中...' } %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
