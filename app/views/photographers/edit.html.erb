<div class="users-container">
  <div class="users-wrapper">
    <h2 class="menu-title">プロフィール編集</h2>
    <%= form_with model:@photographer, local: true do |f| %>

      <div class="field">
        <%= f.label :name, 'フォトグラファーネーム' %>
        <%= f.text_field :name, value: @photographer.name, autofocus: true, class:'form-control' %>
      </div>

      <div class="field">
        <%= f.label :photographer_profile_image, 'プロフィール写真' %>
        <%= f.file_field :photographer_profile_image %>
      </div>

      <div class="field">
        <%= f.label :cover_image, 'カバー写真' %>
        <%= f.file_field :cover_image %>
      </div>

      <div class="field">
        <%= f.label :area, '活動地域' %>
        <%= f.text_field :area, value: @photographer.area, class:'form-control' %>
      </div>

      <div class="field">
        <%= f.label :introduction, '紹介文' %>
        <textarea class="form-control" rows="5" name="photographer[introduction]" id="photographer_introduction"><%= @photographer.introduction %></textarea>
      </div>

      <div class="field">
        <%= f.label :genre, '撮影ジャンル' %>
        <%= f.text_field :genre, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :instagram_url, 'インスタグラムURL' %>
        <%= f.text_field :instagram_url, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :facebook_url, 'フェイスブックURL' %>
        <%= f.text_field :facebook_url, class:'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :public_status, 'プロフィール公開設定' %>
        <select class="form-control" id="sel1" aria-label="Default select example" name="photographer[public_status]" id="photographer_public_status">
          <option value="true">公開する</option>
          <option selected="selected" value="false">まだ公開しない</option>
        </select>
      </div>

      <div class="action field">
        <%= f.submit '編集内容を保存する', class:"form-control btn btn-dark", data: { disable_with: '保存中...' } %>
      </div>
    <% end %>
  </div>
</div>
