<div class="photos-wrapper">
  <% @photographers.each do |photographer| %>
    <div class="photographer-info">
      <%= link_to photographer_path(photographer), class: "photographer-image" do %>
        <div class="square">
          <% if photographer.photographer_profile_image.blank? %>
            <%= image_tag('no_profile_image.jpg') %>
          <% else %>
            <%= image_tag photographer.photographer_profile_image.url %>
          <% end %>
        </div>
        <h5><%= photographer.name %></h5>
      <% end %>
    </div>
  <% end %>
</div>
