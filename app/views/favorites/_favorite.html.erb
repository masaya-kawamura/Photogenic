<% if photo.favorited_by?(current_user) %>
  <%= link_to photo_favorites_path(photo.id), method: :DELETE, remote: true do %>
    ♥<%= photo.favorites.count %>
  <% end %>
<% else %>
  <%= link_to photo_favorites_path(photo.id), method: :POST, remote: true do %>
    ♡<%= photo.favorites.count %>
  <% end %>
<% end %>